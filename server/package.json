{
  "name": "ecommerce-server",
  "version": "0.0.7",
  "private": true,
  "main": "dist/server.js",
  "description": "A best practices express/ts server with clustering and socket.io",
  "scripts": {
    "start": "node ./dist/server.js",
    "postinstall": "npm run build",
    "build": "tsc",
    "dev": "ts-node-dev --respawn server.ts",
    "migrate": "ts-node migrations.ts",
    "eslint": "eslint --quiet --fix",
    "prettier": "prettier **/*.ts --write",
    "lint": "npm run prettier && npm run eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run build"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "npm run lint"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "~4.17.1",
    "helmet": "^4.6.0",
    "jsend": "^1.1.0",
    "morgan": "~1.10.0",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "pm2": "^5.1.1",
    "sequelize": "^6.6.5",
    "umzug": "^2.3.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/jsend": "^1.0.29",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.7.4",
    "@types/umzug": "^2.3.2",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.2"
  }
}
